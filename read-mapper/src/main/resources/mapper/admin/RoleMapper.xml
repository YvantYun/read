<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yvant.mapper.admin.RoleMapper">

    <select id="getRoleListByAdminId" parameterType="java.lang.Long" resultType="com.yvant.model.admin.Role">
        SELECT
            r.*
        FROM
            sys_role r
            LEFT JOIN sys_admin_role ar ON r.id = ar.role_id
        WHERE
            AND r.deleted = 0

            ar.admin_id = #{adminId}
        ORDER BY r.sort

    </select>
</mapper>
